@{
    var grid = Html.DevExpress().GridView(settings => {
        settings.Name = "DocumentGridView";

        settings.Width = Unit.Percentage(100);
        settings.CallbackRouteValues = new { Controller = "Rental", Action = "DocumentGridViewPartial" };

        settings.SettingsEditing.AddNewRowRouteValues = new { Controller = "Rental", Action = "DocumentGridViewPartialAddNew" };
        settings.SettingsEditing.UpdateRowRouteValues = new { Controller = "Rental", Action = "DocumentGridViewPartialUpdate" };
        settings.SettingsEditing.DeleteRowRouteValues = new { Controller = "Rental", Action = "DocumentGridViewPartialDelete" };
        settings.SettingsEditing.Mode = GridViewEditingMode.Batch;
        settings.SettingsBehavior.ConfirmDelete = true;

        settings.CommandColumn.Visible = true;
        settings.CommandColumn.ShowNewButton = true;
        settings.CommandColumn.ShowDeleteButton = true;
        settings.CommandColumn.ShowEditButton = true;

        settings.KeyFieldName = "aaaa";

        settings.SettingsPager.Visible = false;
        settings.Settings.ShowGroupPanel = false;
        settings.Settings.ShowFilterRow = false;
        settings.SettingsBehavior.AllowSelectByRowClick = true;

    });
    if (ViewData["EditError"] != null){
        grid.SetEditErrorText((string)ViewData["EditError"]);
    }
}
@grid.Bind(Model).GetHtml()