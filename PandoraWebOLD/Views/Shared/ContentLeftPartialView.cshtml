<div class="leftPanel">
        @* DXCOMMENT: Configure the left panel's menu *@
    @Html.DevExpress().NavBar(settings => {
    settings.Name = "LeftNavBar";
    settings.AutoCollapse = true;
    settings.EnableAnimation = true;
    settings.Width = System.Web.UI.WebControls.Unit.Percentage(100);
    settings.ControlStyle.Border.BorderWidth = System.Web.UI.WebControls.Unit.Pixel(0);
    settings.ControlStyle.Paddings.Padding = System.Web.UI.WebControls.Unit.Pixel(0);

    settings.Groups.Add(group => {
        group.Text = "Home";
        group.HeaderImage.Url = "~/Images/Menu/home.png";
        group.Items.Add("Item 1");
        group.Items.Add("Item 2");
        group.Items.Add("Item 3");
    });
    settings.Groups.Add(group =>
    {
        group.Text = "Alquileres";
        group.HeaderImage.Url = "~/Images/Menu/rental.png";
        group.Items.Add("Cotizacion","", "~/Images/Menu/rental-quote.png","~/Rental/Quote");
        group.Items.Add("Orden de Compra","", "~/Images/Menu/rental-purchase-order.png");
        group.Items.Add("Factura","", "~/Images/Menu/rental-invoice.png");
    });
    settings.Groups.Add(group => {
        group.Text = "Reportes";
        group.HeaderImage.Url = "~/Images/Menu/reports.png";
        group.Items.Add("Item 1");
        group.Items.Add("Item 2");
        group.Items.Add("Item 3");
        group.Items.Add("Item 4");
        group.Items.Add("Item 5");
    });
}).GetHtml()
</div>